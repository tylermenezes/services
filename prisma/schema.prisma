generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB")
}

enum TicketProvider {
  TICKETTAILOR
  TICKETMASTER
}

model IgniteEvent {
  id String @id @default(uuid())
  ticketProvider TicketProvider @default(TICKETTAILOR)
  name String
  startsAt DateTime
  ticketsIgniteTicketSales IgniteTicketSales[]
}

model IgniteTicketSales {
  id String @id @default(uuid())
  eventId String
  event IgniteEvent @relation(fields: [eventId], references: [id])
  ticketProvider TicketProvider @default(TICKETTAILOR)
  timestamp DateTime
  daysToEvent Int
  daysSinceOnsale Int
  ticketCount Int
}
